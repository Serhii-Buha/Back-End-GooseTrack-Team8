      "get": {
        "tags": ["Tasks"],
        "summary": "Get task by user's id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "64983b139dd09fca9aaa6da4"
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "ОК",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TasksByIdUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
